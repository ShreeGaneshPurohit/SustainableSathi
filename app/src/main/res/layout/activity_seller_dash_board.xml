<?xml version="1.0" encoding="utf-8"?>

<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF1D6"
    android:orientation="horizontal"
    android:padding="20dp"
    tools:context=".Seller_DashBoard"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="74dp"
                android:layout_height="75dp"
                android:src="@drawable/appIcon">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50sdp"
                android:fontFamily="sans-serif-condensed"
                android:text="@string/app_name"
                android:textColor="#000"
                android:textSize="@dimen/_30sdp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="#9DC08B"
                android:padding="@dimen/_10sdp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity=""
                    android:text="@string/e_waste_nfacility_locator"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="173dp"
                    android:layout_height="133dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/locator">

                </ImageView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:background="#609966"
                android:padding="@dimen/_10sdp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="115dp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Sell\nE-Waste"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="173dp"
                    android:layout_height="133dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sellewaste">

                </ImageView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#86A789"
                android:padding="@dimen/_10sdp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Knowledge\nHub"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="169dp"
                    android:layout_height="94dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/legal_comp">

                </ImageView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="@dimen/_10sdp"
            app:cardCornerRadius="15dp"
            app:cardElevation="@dimen/_10sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#40513B"
                android:padding="@dimen/_10sdp"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Legal\nCompiance"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="163dp"
                    android:layout_height="93dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="-4dp"
                    android:src="@drawable/legal_comp">

                </ImageView>

            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.appcompat.widget.LinearLayoutCompat>